<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/bottom_padding_fullname_container"
    android:paddingLeft="@dimen/padding_left_right_fullname"
    android:paddingRight="@dimen/padding_left_right_fullname"
    android:background="@color/colorBg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="@dimen/top_padding_contacts"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_size_fullname"
                android:paddingRight="@dimen/padding_size_fullname"
                >

                <TextView
                    android:id="@+id/avatarImageText"
                    android:textColor="@android:color/white"
                    android:text="@string/text_download_avatar"
                    android:textSize="@dimen/text_size_fullname"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatarImage"
                    android:layout_width="@dimen/size_avatar"
                    android:layout_height="@dimen/size_avatar"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_person"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FF000000"/>

            </FrameLayout>


            <EditText
                android:id="@+id/register_teacher_first_name"
                android:hint="@string/hint_firstName"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/register_teacher_last_name"
                android:hint="@string/hint_lastName"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/register_teacher_father_name"
                android:hint="@string/hint_fatherName"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/register_teacher_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_size_fullname"
                android:layout_marginLeft="@dimen/padding_size_fullname"
                android:textSize="@dimen/text_size_fullname"
                android:textColor="@android:color/white"
                android:text="@string/hint_birthday"
                />

            <TextView
                android:id="@+id/register_teacher_city"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/text_size_fullname"
                android:textColor="@android:color/white"
                android:text="@string/hint_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/register_teacher_okrug"
                android:hint="@string/hint_region"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/register_teacher_district"
                android:textColor="@android:color/white"
                android:hint="@string/hint_district"
                android:textColorHint="@android:color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>