<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBg">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sc_reg_teacher_leave"
        android:text="@string/switch_leave_house"
        android:textSize="@dimen/font_size_main"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_marginLeft="4dp"
        android:paddingLeft="4dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/et_reg_teacher_subway"
        android:textSize="@dimen/font_size_main"
        android:paddingLeft="8dp"
        android:clickable="true"
        android:inputType="none"
        android:text="@string/hint_subway"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/edt_reg_teacher_phone"
        android:hint="@string/hint_phone"
        android:textSize="@dimen/font_size_main"
        android:paddingLeft="8dp"
        android:inputType="phone"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_phone_existed"
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_is_differ"
        android:textSize="12sp"
        android:textColor="@color/colorWarning"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/edt_reg_teacher_email"
        android:hint="@string/hint_email"
        android:textSize="@dimen/font_size_main"
        android:paddingLeft="8dp"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_email_existed"
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_email_existed"
        android:textSize="12sp"
        android:textColor="@color/colorWarning"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/edt_reg_teacher_login"
        android:hint="@string/hint_login"
        android:textSize="@dimen/font_size_main"
        android:paddingLeft="8dp"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_login_existed"
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_login_existed"
        android:textSize="12sp"
        android:textColor="@color/colorWarning"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/edt_reg_teacher_password"
        android:hint="@string/hint_password"
        android:textSize="@dimen/font_size_main"
        android:paddingLeft="8dp"
        android:inputType="textPassword"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_reg_teacher_passwordConfirm"
        android:hint="@string/hint_password_confirm"
        android:textSize="@dimen/font_size_main"
        android:paddingLeft="8dp"
        android:inputType="textPassword"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_pass_is_differ"
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_is_differ"
        android:textSize="12sp"
        android:textColor="@color/colorWarning"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_reg_teacher_anketa"
        android:textSize="@dimen/font_size_main"
        android:paddingLeft="8dp"
        android:textColor="@android:color/white"
        android:text="@string/title_type_promotion"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<Spinner-->
        <!--android:id="@+id/sp_reg_teacher_promotion_type"-->
        <!--android:spinnerMode="dialog"-->
        <!--android:textSize="@dimen/font_size_main"-->
        <!--android:paddingLeft="0dp"-->
        <!--android:entries="@array/promotion"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    <View
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="1dp"/>
</LinearLayout>
