<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBg"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/card_teacher"
    >

    <!--<ImageView-->
        <!--android:id="@+id/card_img_avatar"-->
        <!--android:layout_width="@dimen/size_avatar"-->
        <!--android:layout_height="@dimen/size_avatar"-->
        <!--android:layout_marginBottom="@dimen/card_padding"-->
        <!--android:layout_marginLeft="@dimen/activity_horizontal_margin"-->
        <!--android:layout_marginRight="@dimen/card_padding"-->
        <!--android:background="@drawable/circle_avatar" />-->

    <TextView
        android:id="@+id/tv_card_subway_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_img_avatar"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_card_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/card_img_avatar"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_card_subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_card_full_name"
        android:layout_toRightOf="@+id/card_img_avatar"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_card_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_card_subjects"
        android:layout_toRightOf="@+id/card_img_avatar"
        android:textColor="@android:color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorHr" />
</RelativeLayout>
